<EditForm Model="@logInModel" OnValidSubmit="@(async ()=> await ExecuteLogin())">
    <FluentValidationValidator />
    <div class="half" style="margin:auto;width:50%;padding:10px">
        <div class="bg order-1 order-md-2"></div>
        <div class="contents order-2 order-md-1">
            <div class="container">
                <div class="row align-items-center justify-content-center">
                    <div class="card shadow mb-5 bg-white rounded">
                        <div class="card-body">
                            <div class="form-block p-3">
                                <div class="text-center mb-5">
                                    <h1>@Resource.LogIn</h1>
                                </div>
                                <div class="form-group first">
                                    <label for="username">@Resource.UserName</label>
                                    <InputText type="text" @bind-Value="@logInModel.UserName" class="form-control" placeholder="@Resource.UserName" id="username" />
                                    <ValidationMessage For="@(()=>logInModel.UserName)" />
                                </div>
                                <div class="form-group last mb-3">
                                    <label for="password">@Resource.Password</label>
                                    <InputText type="password" @bind-Value="@logInModel.Password" class="form-control" placeholder="@Resource.Password" id="password" />
                                    <ValidationMessage For="@(()=>logInModel.Password)" />
                                </div>

                                <div class="d-sm-flex mb-5 align-items-center">
                                    <label class="control control--checkbox mb-3 mb-sm-0">
                                        <span class="caption">@Resource.RememberMe</span>
                                        <InputCheckbox type="checkbox" @bind-Value="@logInModel.RememberMe" />
                                        <div class="control__indicator"></div>
                                    </label>
                                </div>
                                <button type="submit" class="btn btn-danger">@Resource.LogIn</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</EditForm>